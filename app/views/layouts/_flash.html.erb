<% if alert %>
  <div class="container">
    <p class="notice">
    <div class="alert alert-danger alert-dismissible fade show mx-auto" role="alert">
      <%= alert %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    </p>
  </div>
<% end %>


