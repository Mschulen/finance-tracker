<div class="row inline d-inline">
  <div class="text-white">
    <div class="mb-3">
      <h2>Search stocks</h2>
    </div>

    <div class="mt-2">
      <p>Hi <%= current_user.email %>, this is your portfolio page </p>
    </div>

    <%= form_tag search_stock_path, method: :get do %>
      <div class="form-group row">
        <div class="col-sm-4 no-padding-right">
          <%= text_field_tag :stock, params[:stock], placeholder: "Stocc ticker", autofocus: true, class: "form-control form-control-md rounded-0" %>
          </div>
          <div class="col-sm-3 no-padding-left">
            <%= button_tag type: :submit, class: "btn bg-purple text-white rounded-0" do %>
              Search
            <% end %>
          </div>
      </div>
    <% end %>

    <div class="mt-3">
      <% if @stock_display %>
        <div class="card text-dark rounded-0 alert alert-dismissable fade show" style="width: 18rem;">
          <button type="button" class="btn-close " data-bs-dismiss="alert" aria-label="Close"></button>
          <div class="card-body">
            <h5 class="card-title"><%= @stock_display.name %></h5>
            <p class="card-text"><strong>Most recent price: </strong><%= @stock_display.last_price %></p>
            <a href="#" class="btn bg-purple text-white">Show</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= image_tag "portfolio.png", id: "home-image", class: "d-inline" %>
